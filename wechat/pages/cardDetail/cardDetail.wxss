page {
  /* background-color: #edece8; */
  background-color: #f2f2f2;
  color: #666;
  font-family: Microsoft YaHei;
}

.Container{
  width: 100%;
  display: flex;
  justify-items: center;
  justify-content:center
}

.Card{
  margin-top: 20rpx;
  background-color: #fff;
  margin-bottom: 50rpx;
  width: 90%;
  display: flex;
  flex-direction: column;
  border-radius: 30rpx;
}

.userInfo{
  width: 95%;
  padding-bottom: 20rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  display: flex;
  border-bottom: 1rpx red solid;
}
.userPic{
  margin-right: 10rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 1rpx red solid;
}


.cardTitle{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}

.labelContainer {
  display: flex;
  width: 100%;
  justify-content: space-around;
}

.cardLabel {
  display: flex;
  font-size: 30rpx;
  color: #fff;
  padding: 3rpx 10rpx;
  border-radius: 10rpx;
  margin-bottom: 15rpx;
}

.cardContent{
  margin-left: 20rpx;
}

.imgContainer {
  
  display: flex;
  flex-wrap: wrap;
  margin-left: 20rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.img{
  margin-left: 10rpx;
  width: 300rpx;
  height: 300rpx;
}

.disContainer{
  margin-top: 20rpx;
  border-top: red 1rpx solid;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}

.video{
  height: 300rpx;
  width: 300rpx;
  margin-left: 10rpx;
}

.discuss{
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  display: flex;
  margin-left: 20rpx;
}

.alldis{
  margin-top: 15rpx;
}

input{
  width: 80%;
  height: 60rpx;
  border-radius: 5px;
  border: solid #f2f2f2 2rpx;
  margin-bottom: 20rpx;
}

.like{
  width: 42rpx;
  height: 42rpx;
}

.disItem{
  display: flex;
  justify-content: space-between;
}

.likeCount{
  width: 90rpx;
  display: flex;
}

.huifu{
  margin-left: 20rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  line-height: 60rpx;
  height: 60rpx;
  border: #f2f2f2 2rpx solid;
}