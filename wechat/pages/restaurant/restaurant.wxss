.page_row{
  display: flex;
  flex-direction: row
}
.search{
  width: 80%;
}
.search_arr {
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
  margin-left: 20rpx;
}
.searchcion {
  margin: 10rpx 10rpx 10rpx 10rpx;
  position: absolute;
  left:25rpx;
  z-index: 2;
  width: 20px;
  height: 20px;
  text-align: center;
} 
.search_arr input{
  margin-left: 60rpx;
  height: 60rpx;
  border-radius: 5px;
}
.sousuo {
  margin-left: 15rpx;
  width: 15%;
  line-height: 150%;
  text-align: center;
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
}

.restList{
  display: flex;
  flex-direction: column;
}

.restList .rest{
  margin: 10rpx;
  display: flex;
  
}

.restList .restInfo{
  border: 1rpx red solid;
  margin: 5px;
  flex: 3;
}

.restList .rest .restPic{
  flex: 1;
  border: 1rpx red solid;
  margin: 5px;
  display: flex;
}

.restName{
  margin: 5rpx;
}

.restTitle{
  display: flex;
  font-size: 25rpx;
  flex-wrap: wrap;
  justify-content: space-around;
  margin-left: 5rpx;
}

