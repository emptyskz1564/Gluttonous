/**index.wxss**/
/* 什么都没有 */
.nothing {
  text-align: center;
  margin-top: 20px;
  font-size: 20pt;
  color: #353535;
}
/* 打卡 */
.card {
  width: 94%;
  margin: 20px auto 20px auto;
  border-radius: 15rpx;
  text-align: center;
  animation: roll-card-x;
  animation-duration: 0.45s;
  animation-fill-mode: forwards;
  animation-timing-function: ease-out;
  background-color: #fff;
  box-shadow: 5rpx 5rpx 15rpx rgba(0, 0, 0, 0.25);
}
.card-user {
  padding: 8px;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
}
.card-user-image {
  border: solid 5rpx #00bfff;
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
  align-content: center;
  overflow: hidden;
  border-radius: 50%;
  margin-right: 60rpx;
}
.card-user-image image {
  width: 75rpx;
  height: 75rpx;
}
.card-user-name {
  margin-left: 60rpx;
  color: #353535;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.card-title {
  font-size: 17pt;
}
.Labels{
  display: flex;
  justify-content: space-between;
}
.card-content {
  color: #353535;
  /* 仅显示部分，多余内容省略 */
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  text-align: left;
  padding: 0 25rpx;
}
.card-image {
  width: 60%;
  margin: 8px auto 0 auto;
}
.card-image image {
  width: 100%;
  z-index: 999;
}